  var stopTimer = function() {
    $("#word_next_btn").removeClass("hidden");
    $("#tinput_word").val($("#timer_word_finder").text());
    $("#timer_word_finder").addClass("text-success");
    clearInterval(timerInterval);
  }
  var words = ['Thunderbird', 'Firefox','Gimp','LibreOffice','Clementine'];
